{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "lint": "eslint .",
    "test": "echo 'no tests'",
    "typeorm": "node --loader ts-node/esm ./node_modules/typeorm/cli.js -d ./src/db/data-source.ts",
    "db:migrate:gen": "node --loader ts-node/esm ./node_modules/typeorm/cli.js -d ./src/db/data-source.ts migration:generate src/db/migrations/InitSchema",
    "db:migrate:run": "node --loader ts-node/esm ./node_modules/typeorm/cli.js -d ./src/db/data-source.ts migration:run",
    "db:migrate:revert": "node --loader ts-node/esm ./node_modules/typeorm/cli.js -d ./src/db/data-source.ts migration:revert",
    "db:seed": "npm run build && node dist/db/seed.js"
  },
  "dependencies": {
    "@internetperla/shared-dtos": "workspace:*",
    "@nestjs/common": "^10.4.7",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.4.7",
    "@nestjs/platform-express": "^10.4.7",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
